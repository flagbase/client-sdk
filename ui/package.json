{
  "version": "0.0.0",
  "name": "flagbase-ui",
  "description": "Shared containers, components and styles that make up Flagbase UI",
  "keywords": [],
  "author": "Flagbase Team <hello@flagbase.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/flagbase/flagbase.git",
    "directory": "ui"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && npm run start:electron",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js --mode development",
    "dev:web": "cross-env NODE_ENV=development webpack-dev-server --config webpack/web.webpack.js --mode development",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "start:electron": "electron .",
    "build": "npm-run-all build:electron build:react",
    "build:run": "npm-run-all build start:electron",
    "build:electron": "webpack --config webpack/electron.webpack.js",
    "build:react": "webpack --config webpack/react.webpack.js",
    "package": "npm-run-all build package:dist",
    "package:dist": "electron-builder --dir",
    "test": "jest",
    "test:update": "npm run test -- -u",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/electron-devtools-installer": "^2.2.1",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.19",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.7",
    "cz-conventional-changelog": "3.3.0",
    "electron": "^11.5.0",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-compat": "^4.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-standard": "^5.0.0",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.5.4",
    "wait-on": "^6.0.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@rehooks/local-storage": "^2.4.3",
    "antd": "^4.17.4",
    "react": "^16.14.0",
    "react-context-devtool": "^2.0.3",
    "react-dom": "^16.14.0",
    "react-router-dom": "^6.2.1"
  },
  "build": {
    "appId": "flagbase.app-id",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "directories": {
      "output": "packages"
    },
    "files": [
      "package.json",
      "dist/**"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "app",
      "components"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "roots": [
      "app",
      "components"
    ],
    "testRegex": ".spec.(t|j)s[x]?$",
    "transform": {
      "^.+\\.(t|j)s[x]?$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "app/(.*)": "<rootDir>/app/$1",
      "components/(.*)": "<rootDir>/components/$1"
    }
  }
}
